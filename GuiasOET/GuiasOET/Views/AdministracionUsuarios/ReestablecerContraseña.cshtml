@model GuiasOET.Models.GUIAS_EMPLEADO.ReestablecerContraseñaMetadata
@{
    ViewBag.Title = "Restablecer Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div class="row">
    <div class="col-md-9">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>

</div>

<br>

<div class="row">


    @using (Html.BeginForm("ReestablecerContraseña", "AdministracionUsuarios", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {


        @Html.AntiForgeryToken()

        <div class="col-sm-5">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <br>

                        <div class="form-group">
                            @Html.LabelFor(m => m.USUARIO, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-9 col-sm-push-1">
                                @Html.TextBoxFor(m => m.USUARIO, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.USUARIO, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CONTRASENA, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-9 col-sm-push-1">
                                @Html.PasswordFor(m => m.CONTRASENA, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CONTRASENA, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CONFIRMACIONCONTRASENA, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-9 col-sm-push-1">
                                @Html.PasswordFor(m => m.CONFIRMACIONCONTRASENA, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CONFIRMACIONCONTRASENA, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-push-3">
                                <input type="submit" value="Aceptar" class="btn btn-default" style="width:28%" />
                            </div>
                        </div>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    }


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


