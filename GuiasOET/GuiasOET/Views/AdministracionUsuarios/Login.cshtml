@model GuiasOET.Models.GUIAS_EMPLEADO.LoginMetadata

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>

<div class="row col-sm-11 col-sm-offset-1">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row col-sm-10 col-sm-offset-1">
    <hr />
</div>

<br>
<br>
<div class="row col-sm-12">


    @using (Html.BeginForm("Login", "AdministracionUsuarios", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="col-sm-5 col-sm-push-1">

            <div class="panel panel-default">
                <div class="panel-body">
                    <br>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group ">
                        @Html.LabelFor(m => m.USUARIO, new { @class = "col-sm-2 control-label" })

                        <div class="col-sm-9 col-sm-push-1">
                            @Html.TextBoxFor(m => m.USUARIO, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.USUARIO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br>
                    <br>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CONTRASENA, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-9 col-sm-push-1">
                            @Html.PasswordFor(m => m.CONTRASENA, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CONTRASENA, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-push-3">
                            <input type="submit" value="Ingresar" class="btn btn-default" style="width:28%" />
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-push-3">
                            <p>
                                @Html.ActionLink("¿Olvidó su contraseña?", "ReestablecerContraseña")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



























































